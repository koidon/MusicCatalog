@model MusicCatalog.Dtos.Review.CreateReviewDto

@{
    ViewData["Title"] = "CreateReview";
}

<h3>Skapa en recension</h3>

<hr />
<div>
    <div>
        <form asp-action="CreateReview" asp-controller="Review" method="post">
            <input type="hidden" asp-for="SongId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-1">
                <label asp-for="Content" class="control-label visually-hidden"></label>
                <textarea asp-for="Content" class="form-control" id="Content" name="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>