@model MusicCatalog.Dtos.Post.GetPostDto

@{
    ViewData["Title"] = "ViewPost";
}

@Html.Raw(ViewBag.Alert)

<h1>View Post</h1>

<div>
    <h4>Post Details</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoteCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoteCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
    </dl>
</div>

<div>
    @if (User.Identity.Name == Model.User.UserName)
    {    
        <a asp-action="UpdatePost" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    }
    <a asp-action="AllPosts" asp-route-communityId="@Model.CommunityId" class="btn btn-secondary">Back to List</a>
</div>