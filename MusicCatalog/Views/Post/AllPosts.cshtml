@model IEnumerable<MusicCatalog.Dtos.Post.GetPostDto>

@{
    ViewData["Title"] = "AllPosts";
}

<h1>AllPosts</h1>

<p>
    <a asp-controller="Post"asp-action="CreatePost">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    @Html.DisplayFor(modelItem => item.title)
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.title)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.content)</p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Post" asp-action="UpdatePost" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="DeletePost" method="post" class="d-inline">
                        <input type="hidden" name="postId" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>