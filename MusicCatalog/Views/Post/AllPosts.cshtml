            <td class="text-white">
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.ActionLink("UpdatePost", "UpdatePost", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("ViewPost", "ViewPost", new { /* id=item.PrimaryKey */ }) |
