@model MusicCatalog.Models.Artist.Artist

@{
    ViewData["Title"] = "Artist";
}

@Html.Raw(ViewBag.Alert)
<h1>@Html.DisplayFor(model => model.ArtistName)</h1>
<hr/>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card border-primary mb-3">
                <img src="@Html.DisplayFor(model => model.ImageUrl)" class="card-img-top" alt="Release picture"/>
                <div class="card-body">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-dark">
                <div class="card-body">
                    <h5 class="card-title">Genres</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Genres)</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <h5 class="card-title">Popularitet</h5>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @Model.Popularity%" aria-valuenow="@Model.Popularity" aria-valuemin="0" aria-valuemax="100">@Model.Popularity</div>
                        </div>
                    </li>
                </ul>
            </div>
                        <div class="card bg-dark mt-3">
                            <div class="card-body">

                            </div>
                        </div>
                    </div>
        </div>
    </div>